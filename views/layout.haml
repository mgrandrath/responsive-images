!!! 5
%html
  %head
    %meta{ :charset => "utf-8" }
    %title
      Responsive Images Test
    %link{ :rel => "stylesheet", :href => "css/ri.css" }
    - unless @no_js
      :javascript
        (function(win, doc) {
          var resolution, screenType;
          resolution = Math.max(win.screen.width, win.screen.height);
          screenType = win.screenType = resolution > 500 ? 'large' : 'small';
          document.cookie='screenType='+screenType+'; path=/';
        })(window, document);
      %script{ :src => "ri.js", :async => true }

  %body
    = yield

